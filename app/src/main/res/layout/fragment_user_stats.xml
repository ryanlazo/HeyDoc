<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="edu.cnm.deepdive.heydoc.UserStatsFragment"
  android:background="@color/background_color">

  <TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableRow
      android:paddingStart="10dp">
      <TextView
        android:layout_gravity="center_vertical"
        android:labelFor="@+id/last_physical"
        android:text="numbers based on last physical 10-11-2018"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:textSize="20sp"/>
    </TableRow>
    <TableRow>
        android:paddingStart="5dp">
        <TextView
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:text="Age:"
          android:layout_column="0"/>
        <EditText
          android:id="@+id/age_edit"
          android:inputType="numberDecimal"
          android:hint="30"
          android:layout_width="125dp"
          android:layout_height="30dp"
          android:background="@drawable/my_border"
          android:paddingStart="5dp"
          android:layout_column="1"/>
    </TableRow>
    <TableRow
      android:paddingStart="10dp">
      <TextView
        android:labelFor="@+id/height"
        android:text="Height:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_vertical"
        android:textSize="20sp"/>
      <LinearLayout
        android:layout_column="1"
        android:paddingStart="13dp"
        >
        <EditText
          android:id="@+id/height_edit"
          android:inputType="number"
          android:hint="5'10"
          android:layout_width="125dp"
          android:layout_height="30dp"
          android:background="@drawable/my_border"
          android:paddingStart="5dp"/>
        <!--<TextView-->
          <!--android:layout_width="wrap_content"-->
          <!--android:layout_height="wrap_content"-->
          <!--android:text="@string/people"/>-->
      </LinearLayout>
    </TableRow>
    <TableRow
      android:paddingStart="10dp">
      <TextView
        android:labelFor="@+id/weight"
        android:text="Weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_column="0"
        android:textSize="20sp"/>
      <LinearLayout
        android:layout_column="1"
        android:paddingStart="13dp">
        <EditText
          android:id="@+id/weight_edit"
          android:inputType="number"
          android:hint="156.3lbs"
          android:layout_width="125dp"
          android:layout_height="30dp"
          android:background="@drawable/my_border"
          android:paddingStart="5dp"/>
        <!--<TextView-->
          <!--android:layout_height="wrap_content"-->
          <!--android:layout_width="wrap_content"-->
          <!--android:text="@string/percent_sign"/>-->
      </LinearLayout>
    </TableRow>
    <TableRow
      android:paddingStart="10dp">
      <TextView
        android:labelFor="@+id/bp"
        android:text="Blood Pressure:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_column="0"
        android:textSize="20sp"/>
      <LinearLayout
        android:layout_column="1"
        android:paddingStart="5dp">
        <!--<TextView-->
          <!--android:layout_height="wrap_content"-->
          <!--android:layout_width="wrap_content"-->
          <!--android:text="@string/money_sign"/>-->
        <EditText
          android:id="@+id/bp_edit"
          android:inputType="numberDecimal"
          android:hint="117/73"
          android:layout_width="125dp"
          android:layout_height="30dp"
          android:background="@drawable/my_border"
          android:paddingStart="5dp"/>
      </LinearLayout>
    </TableRow>
    <TableRow
      android:paddingStart="10dp">
      <Button
        android:id="@+id/update_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/total_edit"
        android:text="@string/update"/>
    </TableRow>
  </TableLayout>



</FrameLayout>
